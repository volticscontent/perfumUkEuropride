# =================================
# PERFUMES E-COMMERCE - ENV CONFIG
# =================================

# =================================
# FRONTEND ENVIRONMENT VARIABLES
# =================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Analytics & Tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_META_PIXEL_ID=123456789012345
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxx@sentry.io/xxxxxxx

# =================================
# BACKEND ENVIRONMENT VARIABLES
# =================================

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Shopify Integration
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret
SHOPIFY_API_VERSION=2024-01

# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_here
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@perfumes.com

# External APIs
CORREIOS_API_TOKEN=your_correios_token
MELHOR_ENVIO_TOKEN=your_melhor_envio_token

# Analytics Server-Side
GA_MEASUREMENT_PROTOCOL_SECRET=your_measurement_protocol_secret
META_CONVERSIONS_API_TOKEN=your_meta_conversions_token

# Error Tracking
SENTRY_DSN=https://xxxxxxx@sentry.io/xxxxxxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token
